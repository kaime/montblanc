 * References:
 * http://caniuse.com/border-radius
 */

border-radius()
  if has-support(ie lt 9)
    warn('IE < 9 does not support `border-radius`');

  vendors = ()

  if has-support(firefox lt 4)
    push(vendors, moz)

  if has-support(chrome lt 5) or \
    has-support(android-browser lt 2.2) or \
    has-support(safari lt 5) or \
    has-support(ios-safari lt 4)
    push(vendors, webkit)

  vendorize('border-radius', arguments, vendors)


