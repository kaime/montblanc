/**
 * http://caniuse.com/css3-boxsizing
 */

box-sizing(mode)
  if has-support('ie < 8')
    warn('IE < 8 does not support `box-sizing`')

  if has-support('opera < 9.5')
    warn('Opera < 9.5 does not support `box-sizing`')

  vendors = ()

  if has-support(
      'firefox < 29',
      'android-firefox'
    )
    push(vendors, moz)

  if has-support(
      'chrome < 10',
      'safari < 5.1',
      'ios-safari < 5',
      'android-browser < 4',
      'blackberry-browser < 10'
    )
    push(vendors, webkit)

  vendorize(box-sizing, mode, vendors)