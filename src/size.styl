// Allows
// 	`size: w h` => `width: w; height: h`
//  `size: l` => `width: l; height: l`

-size(prefix, args)
  units = ()
  importance = null

  for arg in args
    if arg is a 'unit' or arg is auto or arg is initial
      push(units, arg)
    if arg is !important
      importance = !important

  l = length(units)
  if l == 1
    push(units, units[0])
  else if l != 2
    error()

  {prefix}width: units[0] importance
  {prefix}height: (units[1] or units[0]) importance

size()
  -size('', arguments)

min-size()
  -size('min-', arguments)

max-size()
  -size('max-', arguments)