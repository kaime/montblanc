// @describe `(min/max-)size`

// @it takes one or two unit arguments and sets both `(min/max-)width` and `(min/max-)height` at once
div
  size: 10px
  size: 10px 20px
  min-size: 1px
  max-size: 99px
  min-size: 1px 2px
  max-size: 2px 4px

// @expect
div {
  width: 10px;
  height: 10px;
  width: 10px;
  height: 20px;
  min-width: 1px;
  min-height: 1px;
  max-width: 99px;
  max-height: 99px;
  min-width: 1px;
  min-height: 2px;
  max-width: 2px;
  max-height: 4px;
}

// @it handles `auto` and `initial` values
div
  min-size: auto 20px

div
  size: auto

div
  size: 50% initial

// @expect
div {
  min-width: auto;
  min-height: 20px;
}
div {
  width: auto;
  height: auto;
}
div {
  width: 50%;
  height: initial;
}

// @it handles `!important`
div
  size: 10px !important
  size: 10px auto !important
  min-size: auto !important
  max-size: 1920px 1080px !important

// @expect
div {
  width: 10px !important;
  height: 10px !important;
  width: 10px !important;
  height: auto !important;
  min-width: auto !important;
  min-height: auto !important;
  max-width: 1920px !important;
  max-height: 1080px !important;
}