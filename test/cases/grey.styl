// @describe `grey()`

// @it creates a shade of grey
body
  color: grey(100%)

// @expect
body {
  color: #000;
}

// @it accepts a percentage or a float between [0..1] as black level
body
  border-color: grey(50%)
  color: grey(.2)

// @expect
body {
  border-color: #808080;
  color: #ccc;
}

// @it has an optional `alpha` argument
body
  border-color: grey(50%, 25%)
  box-shadow-color: grey(.5, .17)

// @expect
body {
  border-color: rgba(128,128,128,0.25);
  box-shadow-color: rgba(128,128,128,0.17);
}

// @it is aliased `gray`
body
  border-color: gray(50%)

// @expect
body {
  border-color: #808080;
}


// @it does not break Stylus/CSS `grey` and `gray` colors
body
  background-color: grey
  color: grey()
  border-color: gray
  color: gray()

// @expect
body {
  background-color: #808080;
  color: #808080;
  border-color: #808080;
  color: #808080;
}