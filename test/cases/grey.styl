// @describe `grey()`

// @it creates a shade of grey
body
  color: grey(100%)

// @expect
body {
  color: #000;
}

// @it accepts a percentage or a float between [0..1] as black level
body
  border-color: grey(50%)
  color: grey(.2)

// @expect
body {
  border-color: #808080;
  color: #ccc;
}

// @it has an optional `alpha` argument
body
  border-color: grey(50%, 25%)
  box-shadow-color: grey(.5, .17)

// @expect
body {
  border-color: rgba(128,128,128,0.25);
  box-shadow-color: rgba(128,128,128,0.17);
}

// @it only breaks Stylus/CSS `grey` color *a bit*
// When we do: "color: grey", Stylus will print "grey", which is the name of
// The function, nor the color variable `grey`, which would print as '#808080'.
// Not big deal.
body
  background-color: grey
  color: grey()

// @expect
body {
  background-color: grey;
  color: #808080;
}





