// @describe `inherit`

// @it takes a list of property names and sets them all to `inherit` onto current block
html
  inherit: font display background-color -moz-appareance

// @expect
html {
  font: inherit;
  display: inherit;
  background-color: inherit;
  -moz-appareance: inherit;
}

// @it can be used more than once on the same block
body
  inherit: margin padding
  inherit(font-style, font-weight)
  inherit: font-family

// @expect
body {
  margin: inherit;
  padding: inherit;
  font-style: inherit;
  font-weight: inherit;
  font-family: inherit;
}

// @it handles `!important`
html
  body
    inherit: width !important
    inherit(height !important)

// @expect
html body {
  width: inherit !important;
  height: inherit !important;
}

// @it works along with other mixins
support('firefox 1', 'chrome 1')
body
  inherit: box-sizing font;
  inherit: border-radius !important

// @expect
body {
  -moz-box-sizing: inherit;
  -webkit-box-sizing: inherit;
  box-sizing: inherit;
  font: inherit;
  -moz-border-radius: inherit !important;
  -webkit-border-radius: inherit !important;
  border-radius: inherit !important;
}